# Application
APP_NAME="Alphavel App"
APP_ENV=development
APP_DEBUG=true
APP_PORT=9999

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=9999
SERVER_WORKERS=4

# Database (when alphavel/database is installed)
# Uncomment and configure based on your setup:
#
# For Docker with MySQL:
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=alphavel
# DB_USERNAME=root
# DB_PASSWORD=secret
#
# For local installation:
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=alphavel
# DB_USERNAME=root
# DB_PASSWORD=

# Cache (when alphavel/cache is installed)
# Uncomment and configure based on your setup:
#
# For Docker with Redis:
# CACHE_DRIVER=redis
# REDIS_HOST=redis
# REDIS_PORT=6379
#
# For local installation:
# CACHE_DRIVER=redis
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
#
# For file cache (no Redis needed):
# CACHE_DRIVER=file

# Logging (when alphavel/logging is installed)
# LOG_CHANNEL=daily
# LOG_LEVEL=debug
